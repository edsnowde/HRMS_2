# Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/auralis_hr
REDIS_URL=redis://localhost:6379

# Firebase Configuration
FIREBASE_PROJECT_ID=gen-lang-client-0414100481
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@gen-lang-client-0414100481.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# External Services
# Vertex AI / GCP configuration
# Provide a path to a Google service account JSON file with permissions
# for Vertex AI and Cloud Storage, or set the environment variable
# GOOGLE_APPLICATION_CREDENTIALS pointing to that file.
GCS_BUCKET_NAME=your_gcs_bucket_name
GCS_PROJECT_ID=your_gcs_project_id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/gcp-service-account.json
# Vertex AI Matching Engine configuration
# The Vertex Index resource id (created in Vertex AI) used for storing
# and querying embeddings. You'll need both the index id and the index
# endpoint id used by the MatchService for find_neighbors.
VTX_GCP_PROJECT_ID=your_gcp_project_id
VTX_GCP_REGION=us-central1
VTX_INDEX_ID=your_vertex_index_id
VTX_INDEX_ENDPOINT_ID=your_vertex_index_endpoint_id
GEMINI_API_KEY=your_gemini_api_key

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Application Configuration
APP_NAME=Auralis AI HR Backend
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,mp4,mp3,wav,webm

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Monitoring
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
METRICS_PORT=9090

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@auralis.com

# WebSocket Configuration
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS=1000
